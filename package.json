{
  "name": "hem-smart-contracts",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint '**/*.{js,ts}' --fix && solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
    "prettier": "npx prettier '**/*.{json,sol,md,ts}' --write",
    "clean": "rm -rf ./artifacts/ && rm -rf ./build",
    "build": "waffle",
    "test": "hardhat test test/hem.test.ts",
    "test:coverage": "hardhat coverage --testfiles test/hem.test.ts",
    "test:integration": "hardhat test test/integration.test.ts",
    "demo:1": "hardhat run demos/demo-1.js",
    "node:start": "npx hedera-local start",
    "node:stop": "npx hedera-local stop",
    "localhost": "hardhat run ./scripts/deploy.ts --network localhost",
    "create-account": "node ./scripts/create-account.ts",
    "create-topic": "node ./scripts/create-topic.ts",
    "set-tinybar-per-cent": "node ./scripts/set-tinybar-per-cent.ts",
    "seed:nfts": "node ./scripts/seed-nfts.ts",
    "associate-token": "node ./scripts/associate-token.ts",
    "transfer-token": "node ./scripts/transfer-token.ts",
    "associate-token-to-contract": "node ./scripts/associate-token-to-contract.ts",
    "apply-kyc": "node ./scripts/apply-kyc.ts",
    "apply-contract-kyc": "node ./scripts/apply-contract-kyc.ts",
    "get-offset": "node ./scripts/get-offset.ts",
    "dev": "cross-env NODE_ENV=development nodemon",
    "prod": "cross-env NODE_ENV=development nodemon -- mainnet"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.0.7",
    "@hashgraph/hedera-local": "^1.0.2",
    "@hashgraph/sdk": "^2.14.2",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.52",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.5",
    "hardhat": "^2.10.2",
    "hardhat-gas-reporter": "^1.0.8",
    "nodemon": "^2.0.19",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solc": "^0.8.14-fixed",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4"
  }
}
